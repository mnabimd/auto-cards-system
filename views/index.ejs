<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head')%>
    <title>Auto Card System - KDR University</title>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('partials/sidebar')%>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('partials/topbar')%>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- ---------------------------------------------------------------------- -->
                    <!-- Page Heading -->
                    <div class="main-div" id="card">
                        <!-- <h4 class="text-dark">Create New Card</h4> -->

                        <div class="row">

                            <!-- Earnings (Monthly) Card Example -->
                            <div class="col-xl-6 col-md-6 mb-4">
                                <div class="card border-left-primary shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2 pashtoFont">
                                                <div
                                                    class="text-xs font-weight-bold text-primary text-uppercase mb-1 normalSize pashtoFont text-center mb-3">
                                                    عمومی احصائیه(ټول کلونه)</div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800">

                                                    <div>
                                                        <span class="float-right" dir="rtl">نارینه:</span>
                                                        <span id="general-male">
                                                        </span>
                                                    </div>
                                                    <div>
                                                        <span class="float-right" dir="rtl">شځینه:</span> <span
                                                            id="general-female">10</span>
                                                    </div>
                                                    <div>
                                                        <span class="float-right" dir="rtl">جمع:</span> <span
                                                            id="general-both">0</span>
                                                    </div>
                                                    <hr>
                                                    <div><span class="float-right" dir="rtl">مکمل:</span> <span
                                                            id="general-all">0</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Earnings (Monthly) Card Example -->
                            <div class="col-xl-6 col-md-6 mb-4">
                                <div class="card border-left-success shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2 pashtoFont">
                                                <div
                                                    class="text-xs font-weight-bold text-primary text-uppercase mb-1 normalSize pashtoFont text-center mb-3">
                                                    د <span id="ihsayaYear">۱۴۰۰</span> کال احصائیه</div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800">

                                                    <div>
                                                        <span class="float-right" dir="rtl">نارینه:</span>
                                                        <span id="yearly-male">0</span>
                                                    </div>
                                                    <div>
                                                        <span class="float-right" dir="rtl">شځینه:</span>
                                                        <span id="yearly-female">0</span>
                                                    </div>
                                                    <div>
                                                        <span class="float-right" dir="rtl">جمع:</span>
                                                        <span id="yearly-both">0</span>
                                                    </div>
                                                    <hr>
                                                    <div>
                                                        <span class="float-right" dir="rtl">مکمل:</span>
                                                        <span id="yearly-all">0</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Faculties Chart</h6>
                            </div>
                            <div class="card-body">
                                <div class="chart-bar">
                                    <div class="chartjs-size-monitor">
                                        <div class="chartjs-size-monitor-expand">
                                            <div class=""></div>
                                        </div>
                                        <div class="chartjs-size-monitor-shrink">
                                            <div class=""></div>
                                        </div>
                                    </div>
                                    <canvas id="facultiesChart" class="chartjs-render-monitor"></canvas>
                                </div>
                            </div>
                        </div>

                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary d-inline">Departments Chart</h6>

                                <div class="d-inline float-right">
                                    <a class="btn btn-info px-3" href="#pieSlider" role="button"
                                        data-slide="prev">Prev</a>
                                    <a class="btn btn-info px-3" href="#pieSlider" role="button"
                                        data-slide="next">Next</a>
                                </div>
                            </div>
                            <div class="card-body">
                                <div id="pieSlider" class="carousel slide" data-ride="carousel">

                                    <div class="carousel-inner" id="departments-charts-slider">

                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                    <!-- ---------------------------------------------------------------------- -->
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('partials/footer')%>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <%- include('partials/modals/logout')%>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- My Scripts:- -->
    <!-- <script src="./js/main/bundle.js"></script> -->
    <script src="./js/main/chart.js"></script>

    <script>
        $('.carousel').carousel({
            interval: false,
        });
    </script>

</body>

</html>